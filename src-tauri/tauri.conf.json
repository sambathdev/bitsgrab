{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "bitsgrabber",
  "version": "0.1.0",
  "identifier": "com.bitsgrabber.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "main",
        "url": "/main",
        "width": 400,
        "height": 400,
        "decorations": true,
        "transparent": true,
        "resizable": true,
        "shadow": false,
        "alwaysOnTop": false,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
